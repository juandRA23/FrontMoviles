<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FrontMoviles.InicioPage"
            
             BackgroundColor="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Contenido principal -->
        <ScrollView Grid.Row="0">
            <StackLayout Spacing="0">

                <!-- Header con saludo y b칰squeda -->
                <Grid BackgroundColor="#4A7C59" Padding="20,50,20,30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Header superior -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackLayout Grid.Column="0" Orientation="Horizontal">
                            <Frame BackgroundColor="White" 
                                   CornerRadius="8" 
                                   WidthRequest="40" 
                                   HeightRequest="40"
                                   HasShadow="False"
                                   Padding="8">
                                <Label Text="游댢" 
                                       FontSize="20"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center" />
                            </Frame>
                            <StackLayout Margin="10,0,0,0" VerticalOptions="Center">
                                <Label Text="SERVIFLEX" 
                                       FontSize="18" 
                                       FontAttributes="Bold"
                                       TextColor="White" />
                                <Label x:Name="SaludoLabel"
                                       Text="춰Bienvenido de vuelta!" 
                                       FontSize="12" 
                                       TextColor="White">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnNombreUsuarioClicked" />
                                    </Label.GestureRecognizers>
                                </Label>
                            </StackLayout>
                        </StackLayout>

                        <!-- Bot칩n notificaciones -->
                        <ImageButton Grid.Column="1" 
             Source="notifications.png"
             WidthRequest="40"
             HeightRequest="40"
             BackgroundColor="Transparent"
             Clicked="OnNotificacionesClicked" />

                        <!-- Bot칩n logout -->
                        <ImageButton Grid.Column="2" 
             Source="logout.png"
             WidthRequest="40"
             HeightRequest="40"
             BackgroundColor="Transparent"
             Clicked="OnLogoutClicked" />
                    </Grid>

                    <!-- T칤tulo principal -->
                    <Label Grid.Row="1" 
                           Text="쯈u칠 servicio necesitas hoy?"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White"
                           Margin="0,0,0,20" />

                    <!-- Barra de b칰squeda -->
                    <Frame Grid.Row="2" 
                           BackgroundColor="White"
                           CornerRadius="25"
                           HasShadow="False"
                           Padding="15,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="0" 
               Source="search.png"
               WidthRequest="16"
               HeightRequest="16"
               VerticalOptions="Center" />

                            <Entry Grid.Column="1"
                                   x:Name="BusquedaEntry"
                                   Placeholder="Buscar servicios..."
                                   PlaceholderColor="Gray"
                                   TextColor="Black"
                                   BackgroundColor="Transparent"
                                   Margin="10,0,0,0" />

                            <Button Grid.Column="2"
                                    Text="Buscar"
                                    BackgroundColor="#518777"
                                    TextColor="White"
                                    FontSize="12"
                                    CornerRadius="15"
                                    Padding="15,5"
                                    Clicked="OnBuscarClicked" />
                        </Grid>
                    </Frame>
                </Grid>

                <!-- Contenido principal -->
                <StackLayout BackgroundColor="White" Spacing="25" Padding="20,25">

                    <!-- Categor칤as populares -->
                    <StackLayout Spacing="15">
                        <Label Text="Categor칤as populares" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               TextColor="Black" />

                        <Grid ColumnSpacing="15" RowSpacing="15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Educaci칩n -->
                            <StackLayout Grid.Column="0" HorizontalOptions="Center">
                                <Frame BackgroundColor="#A8D5BA"
                                       CornerRadius="25"
                                       WidthRequest="50"
                                       HeightRequest="50"
                                       HasShadow="False"
                                       Padding="0">
                                    <ImageButton Grid.Column="1" 
                                    Source="book.png"
                                    WidthRequest="40"
                                    HeightRequest="40"
                                    BackgroundColor="Transparent"
                                            Clicked="OnCategoriaClicked"
                                            CommandParameter="Educacion" />
                                </Frame>
                                <Label Text="Educaci칩n" 
                                       FontSize="12" 
                                       TextColor="Black"
                                       HorizontalOptions="Center"
                                       Margin="0,5,0,0" />
                            </StackLayout>

                            <!-- Hogar -->
                            <StackLayout Grid.Column="1" HorizontalOptions="Center">
                                <Frame BackgroundColor="#A8D5BA"
                                       CornerRadius="25"
                                       WidthRequest="50"
                                       HeightRequest="50"
                                       HasShadow="False"
                                       Padding="0">
                                    <ImageButton Grid.Column="1" 
Source="home.png"
WidthRequest="40"
HeightRequest="40"
BackgroundColor="Transparent"
                                            Clicked="OnCategoriaClicked"
                                            CommandParameter="Hogar" />
                                </Frame>
                                <Label Text="Hogar" 
                                       FontSize="12" 
                                       TextColor="Black"
                                       HorizontalOptions="Center"
                                       Margin="0,5,0,0" />
                            </StackLayout>

                            <!-- Tecnolog칤a -->
                            <StackLayout Grid.Column="2" HorizontalOptions="Center">
                                <Frame BackgroundColor="#A8D5BA"
                                       CornerRadius="25"
                                       WidthRequest="50"
                                       HeightRequest="50"
                                       HasShadow="False"
                                       Padding="0">
                                    <ImageButton Grid.Column="1" 
Source="computer.png"
WidthRequest="40"
HeightRequest="40"
BackgroundColor="Transparent"
                                            Clicked="OnCategoriaClicked"
                                            CommandParameter="Tecnologia" />
                                </Frame>
                                <Label Text="Tecnolog칤a" 
                                       FontSize="12" 
                                       TextColor="Black"
                                       HorizontalOptions="Center"
                                       Margin="0,5,0,0" />
                            </StackLayout>

                            <!-- Dise침o -->
                            <StackLayout Grid.Column="3" HorizontalOptions="Center">
                                <Frame BackgroundColor="#A8D5BA"
                                       CornerRadius="25"
                                       WidthRequest="50"
                                       HeightRequest="50"
                                       HasShadow="False"
                                       Padding="0">
                                    <ImageButton Grid.Column="1" 
Source="palette.png"
WidthRequest="40"
HeightRequest="40"
BackgroundColor="Transparent"
                                            Clicked="OnCategoriaClicked"
                                            CommandParameter="Diseno" />
                                </Frame>
                                <Label Text="Dise침o" 
                                       FontSize="12" 
                                       TextColor="Black"
                                       HorizontalOptions="Center"
                                       Margin="0,5,0,0" />
                            </StackLayout>
                        </Grid>
                    </StackLayout>

                    <!-- Servicios recientes -->
                    <StackLayout Spacing="15">
                        <Label Text="Servicios recientes" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               TextColor="Black" />

                        <!-- Lista de servicios -->
                        <StackLayout x:Name="ServiciosContainer" Spacing="15">
                            <!-- Los servicios se cargar치n din치micamente -->
                        </StackLayout>

                        <Button Text="Ver todos los servicios"
                                BackgroundColor="Transparent"
                                TextColor="#518777"
                                BorderColor="#518777"
                                BorderWidth="1"
                                CornerRadius="20"
                                Clicked="OnVerTodosClicked" />
                    </StackLayout>

                </StackLayout>
            </StackLayout>
        </ScrollView>

        <!-- Footer de navegaci칩n -->
        <Grid Grid.Row="1" BackgroundColor="White" Padding="0,10,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Inicio -->
            <StackLayout Grid.Column="0" HorizontalOptions="Center">
                <Frame x:Name="InicioFrame"
                       BackgroundColor="#4A7C59"
                       CornerRadius="20"
                       WidthRequest="40"
                       HeightRequest="40"
                       HasShadow="False"
                       Padding="0">
                    <ImageButton Grid.Column="2" 
                         Source="home.png"
                         WidthRequest="40"
                         HeightRequest="40"
                         BackgroundColor="Transparent"
                         Clicked="OnInicioClicked" />
                </Frame>
                <Label Text="Inicio" 
                       FontSize="12" 
                       TextColor="#4A7C59"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />
            </StackLayout>

            <!-- Servicios -->
            <StackLayout Grid.Column="1" HorizontalOptions="Center">
                <Frame x:Name="ServiciosFrame"
                       BackgroundColor="#E0E0E0"
                       CornerRadius="20"
                       WidthRequest="40"
                       HeightRequest="40"
                       HasShadow="False"
                       Padding="0">
                    <ImageButton Grid.Column="2" 
             Source="receipt.png"
             WidthRequest="40"
             HeightRequest="40"
             BackgroundColor="Transparent"
             
                            Clicked="OnServiciosClicked" />
                </Frame>
                <Label Text="Servicios" 
                       FontSize="12" 
                       TextColor="Gray"
                       HorizontalOptions="Center" />
            </StackLayout>

            <!-- Publicar -->
            <StackLayout Grid.Column="2" HorizontalOptions="Center">
                <Frame x:Name="PublicarFrame"
                       BackgroundColor="#E0E0E0"
                       CornerRadius="20"
                       WidthRequest="40"
                       HeightRequest="40"
                       HasShadow="False"
                       Padding="0">
                    <ImageButton Grid.Column="2" 
             Source="publish.png"
             WidthRequest="40"
             HeightRequest="40"
             BackgroundColor="Transparent"
             
                            Clicked="OnPublicarClicked" />
                </Frame>
                <Label Text="Publicar" 
                       FontSize="12" 
                       TextColor="Gray"
                       HorizontalOptions="Center" />
            </StackLayout>

            <!-- Perfil -->
            <StackLayout Grid.Column="3" HorizontalOptions="Center">
                <Frame x:Name="PerfilFrame"
                       BackgroundColor="#E0E0E0"
                       CornerRadius="20"
                       WidthRequest="40"
                       HeightRequest="40"
                       HasShadow="False"
                       Padding="0">
                    <ImageButton Grid.Column="2" 
             Source="person.png"
             WidthRequest="40"
             HeightRequest="40"
             BackgroundColor="Transparent"
             
                            Clicked="OnPerfilClicked" />
                </Frame>
                <Label Text="Perfil" 
                       FontSize="12" 
                       TextColor="Gray"
                       HorizontalOptions="Center" />
            </StackLayout>
        </Grid>
    </Grid>
</ContentPage>